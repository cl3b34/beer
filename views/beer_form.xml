<?xml version="1.0"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="beer_form">
      <field name="name">Beer model form</field>
      <field name="model">beer.beer_report</field>
      <field name="arch" type="xml">
        <form string="beer model">
	  <header>
	    <button name="do_calculate_liters" type="object"
		    string="calculate L of alcohol" class="oe_highlight" />
	    <button name="do_calculate_cl" type="object"
		    string="calculate CL of alcohol" />
	  </header>
	  <sheet>
	    <group name="group_top">
	      <group name="group_left">
		<field name="alcohol_pct"/>
	      </group>
	      <group name="group_right">
		<field name="liters"/>
	      </group>
            </group>
	  </sheet>
	</form>
      </field>
    </record>
  </data>
</odoo>
